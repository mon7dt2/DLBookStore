<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/imgCategoryItem"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Category Item Name"
        android:id="@+id/txtNameCategoryListItem"
        android:textSize="18sp"
        android:layout_toRightOf="@id/imgCategoryItem"
        android:layout_marginLeft="15dp"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary" />

    <ImageView
        android:id="@+id/iconEditCategory"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_toLeftOf="@+id/iconRemoveCategory"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_edit_gray"
        android:layout_marginEnd="10dp"/>

    <ImageView
        android:id="@+id/iconRemoveCategory"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_trash_gray"
        android:layout_marginEnd="10dp"/>

</RelativeLayout>
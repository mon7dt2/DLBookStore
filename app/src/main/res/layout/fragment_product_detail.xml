<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarProduct"
            android:layout_width="match_parent"
            app:title="@string/productDetail"
            app:titleTextColor="@color/white"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ToolbarColoredBackArrow" />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/toolbarProduct"
            android:layout_marginTop="30dp"
            android:src="@drawable/add_image"
            android:id="@+id/imgProductCover"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/imgProductCover"
            android:id="@+id/layoutEdtProductName"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            app:hintAnimationEnabled="true"
            app:hintTextColor="@color/colorPrimary"
            app:hintEnabled="true">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/edtProductName"
                android:background="@drawable/bg_edt_outline"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:maxLines="1"
                android:hint="Tên sản phẩm"
                android:drawablePadding="10dp"
                android:inputType="text"
                android:paddingStart="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/layoutEdtProductName"
            android:id="@+id/layoutEdtProductCate"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            app:hintAnimationEnabled="true"
            app:hintTextColor="@color/colorPrimary"
            app:hintEnabled="true">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/edtProductCate"
                android:background="@drawable/bg_edt_outline"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:maxLines="1"
                android:hint="Danh mục"
                android:drawablePadding="10dp"
                android:inputType="text"
                android:focusable="false"
                android:paddingStart="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/layoutEdtProductCate"
            android:id="@+id/layoutEdtProductProvider"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            app:hintAnimationEnabled="true"
            app:hintTextColor="@color/colorPrimary"
            app:hintEnabled="true">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/edtProductProvider"
                android:background="@drawable/bg_edt_outline"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:maxLines="1"
                android:hint="Nhà cung cấp"
                android:focusable="false"
                android:drawablePadding="10dp"
                android:inputType="text"
                android:paddingStart="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/layoutEdtProductProvider"
            android:id="@+id/layoutEdtProductPrice"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            app:hintAnimationEnabled="true"
            app:hintTextColor="@color/colorPrimary"
            app:hintEnabled="true">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/edtProductPrice"
                android:background="@drawable/bg_edt_outline"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:maxLines="1"
                android:hint="Đơn giá"
                android:drawablePadding="10dp"
                android:inputType="numberDecimal"
                android:paddingStart="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/layoutEdtProductPrice"
            android:id="@+id/layoutEdtProductQuantity"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            app:hintAnimationEnabled="true"
            app:hintTextColor="@color/colorPrimary"
            app:hintEnabled="true">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/edtProductQuantity"
                android:background="@drawable/bg_edt_outline"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:maxLines="1"
                android:hint="Số lượng"
                android:drawablePadding="10dp"
                android:inputType="number"
                android:paddingStart="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/layoutEdtProductQuantity"
            android:id="@+id/layoutEdtProductAuthor"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            app:hintAnimationEnabled="true"
            app:hintTextColor="@color/colorPrimary"
            app:hintEnabled="true">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/edtProductAuthor"
                android:background="@drawable/bg_edt_outline"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:maxLines="1"
                android:hint="Tác giả"
                android:drawablePadding="10dp"
                android:inputType="text"
                android:paddingStart="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/layoutEdtProductAuthor"
            android:id="@+id/layoutEdtProductPublisher"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            app:hintAnimationEnabled="true"
            app:hintTextColor="@color/colorPrimary"
            app:hintEnabled="true">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/edtProductPublisher"
                android:background="@drawable/bg_edt_outline"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:maxLines="1"
                android:hint="Nhà xuất bản"
                android:drawablePadding="10dp"
                android:inputType="text"
                android:paddingStart="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/layoutEdtProductPublisher"
            android:id="@+id/layoutEdtProductDescription"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            app:hintAnimationEnabled="true"
            app:hintTextColor="@color/colorPrimary"
            app:hintEnabled="true">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/edtProductDescription"
                android:background="@drawable/bg_edt_outline"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:maxLines="1"
                android:hint="Mô tả thêm"
                android:drawablePadding="10dp"
                android:inputType="text"
                android:paddingStart="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/btnSendProductData"
            android:background="@drawable/bg_btn_accent"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="40dp"
            android:layout_below="@+id/layoutEdtProductDescription"/>

    </RelativeLayout>
</ScrollView>

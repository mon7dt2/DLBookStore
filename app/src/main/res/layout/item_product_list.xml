<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:padding="10dp">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="#c1c1c1"
        android:src="@drawable/ic_product"
        android:id="@+id/imgProduct"
        android:layout_marginRight="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:maxLength="40"
        android:text="Name"
        android:layout_toRightOf="@+id/imgProduct"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:id="@+id/txtNameProduct" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:maxLength="40"
        android:text="Sách IT"
        android:layout_below="@+id/txtNameProduct"
        android:layout_toRightOf="@+id/imgProduct"
        android:textStyle="italic"
        android:layout_marginTop="12dp"
        android:textSize="16sp"
        android:id="@+id/txtCategoryProduct" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:maxLength="40"
        android:text="NXB Abc"
        android:layout_below="@+id/txtCategoryProduct"
        android:layout_toRightOf="@+id/imgProduct"
        android:textStyle="italic"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        android:id="@+id/txtPublisher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:maxLength="40"
        android:text="số lượng: 30 cuốn"
        android:layout_toRightOf="@+id/imgProduct"
        android:layout_alignParentBottom="true"
        android:textSize="16sp"
        android:textStyle="italic"
        android:id="@+id/txtQuantity" />

</RelativeLayout>